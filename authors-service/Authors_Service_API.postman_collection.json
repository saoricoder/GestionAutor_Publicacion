{
  "info": {
    "_postman_id": "authors-service-collection",
    "name": "Authors Service API",
    "description": "Colección de API para el servicio de gestión de autores - GestionAut_Pub",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authors",
      "item": [
        {
          "name": "Get All Authors",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/authors",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "authors"
              ]
            },
            "description": "Obtiene la lista completa de todos los autores registrados en el sistema."
          },
          "response": []
        },
        {
          "name": "Get Author by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/authors/1",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "authors",
                "1"
              ]
            },
            "description": "Obtiene los detalles de un autor específico por su ID. Reemplaza '1' con el ID deseado."
          },
          "response": []
        },
        {
          "name": "Create Author",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Gabriel García Márquez\",\n  \"email\": \"gabriel@example.com\",\n  \"bio\": \"Novelista y periodista colombiano, ganador del Premio Nobel de Literatura en 1982.\",\n  \"affiliation\": \"Universidad de Los Andes\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/authors",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "authors"
              ]
            },
            "description": "Crea un nuevo autor en el sistema. Se requieren los campos: name, email, bio y affiliation."
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string",
      "description": "URL base para todas las solicitudes de la API"
    }
  ]
}
